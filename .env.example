# TheWell Pipeline Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/thewell_pipeline
REDIS_URL=redis://localhost:6379

# API Keys (replace with your actual keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
GITHUB_TOKEN=ghp_your-github-token-here

# Server Configuration
PORT=3001
NODE_ENV=development
API_KEY=your-secure-api-key-here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/thewell.log

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# LLM Configuration
LLM_TIMEOUT=30000
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# Manual Review Configuration
REVIEW_SESSION_TIMEOUT=3600000
REVIEW_AUTO_SAVE_INTERVAL=30000
