# Production Environment Variables for Docker Desktop

# Node Environment
NODE_ENV=production

# Database Configuration
POSTGRES_DB=thewell
POSTGRES_USER=thewell_user
POSTGRES_PASSWORD=SuperSecurePwd123!
POSTGRES_PORT=5432
DB_HOST=postgres
DB_PORT=5432
DB_NAME=thewell
DB_USER=thewell_user
DB_PASSWORD=SuperSecurePwd123!
DATABASE_URL=postgresql://thewell_user:SuperSecurePwd123!@postgres:5432/thewell

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Application Configuration
WEB_PORT=3000
LOG_LEVEL=info

# API Keys (replace with actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security
JWT_SECRET=your_jwt_secret_key_here
REVIEW_API_KEY=dev-review-key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Tracing
TRACING_ENABLED=true
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# Cost Tracking
COST_TRACKING_ENABLED=true
OPENAI_COST_PER_1K_TOKENS=0.002
ANTHROPIC_COST_PER_1K_TOKENS=0.003

# Queue Configuration
MAX_CONCURRENCY=5
JOB_TIMEOUT_MS=300000
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001