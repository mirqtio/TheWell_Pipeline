{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/web/dashboard/*"],
      "@components/*": ["src/web/dashboard/components/*"],
      "@pages/*": ["src/web/dashboard/pages/*"],
      "@store/*": ["src/web/dashboard/store/*"],
      "@hooks/*": ["src/web/dashboard/hooks/*"],
      "@utils/*": ["src/web/dashboard/utils/*"],
      "@api/*": ["src/web/dashboard/api/*"],
      "@types/*": ["src/web/dashboard/types/*"]
    }
  },
  "include": [
    "src/web/dashboard/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}